generator client {
  provider = "prisma-client-js"
  // output = "../generated/prisma"  ← 삭제
  // 기본 경로 사용 (node_modules/.prisma/client)
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 컬럼명 변경
// createdAt DateTime @default(now()) @map("created_at")

// 테이블명 변경
// @@map("users")

// @@index([viewCount, createdAt])  // 복합 인덱스 (정렬 쿼리 최적화)

// // 1:N 관계
// author User @relation(fields: [authorId], references: [id], onDelete: Cascade)

// Self-referencing (계층 구조)
// parent Board? @relation("BoardHierarchy", fields: [parentId], references: [id])
// children Board[] @relation("BoardHierarchy")

model User {
  id           Int      @id @default(autoincrement())
  email        String
  password     String
  name         String
  userRole     UserRole @default(USER)
  refreshToken String?  @db.Text

  subscribeEmail Boolean @default(false) @map("subscribe_email")
  subscribeSMS   Boolean @default(false) @map("subscribe_sms")

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  posts  Post[]
  scraps Scrap[]

  @@index([isDeleted])
  @@map("users")
}

enum UserRole {
  USER
  ADMIN
}

model Board {
  id          Int     @id @default(autoincrement())
  name        String
  slug        String  @unique
  description String?

  parentId Int?    @map("parent_id")
  parent   Board?  @relation("BoardHierarchy", fields: [parentId], references: [id])
  children Board[] @relation("BoardHierarchy")

  requiredRole UserRole @default(USER) @map("required_role")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  posts Post[]

  @@index([parentId])
  @@index([slug])
  @@index([requiredRole])
  @@map("boards")
}

model Post {
  id Int @id @default(autoincrement())

  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
  deletedAt DateTime? @map("deleted_at")

  authorId Int?  @map("author_id")
  author   User? @relation(fields: [authorId], references: [id], onDelete: SetNull)

  boardId Int     @map("board_id")
  board   Board   @relation(fields: [boardId], references: [id], onDelete: Cascade)
  scraps  Scrap[]

  title   String
  content String @db.Text

  viewCount  Int @default(0) @map("view_count")
  scrapCount Int @default(0) @map("scrap_count")

  // 검색 통계
  searchCount Int @default(0) @map("search_count") // 검색 노출 횟수

  // BEST 게시판 최적화
  popularityScore Int @default(0) @map("popularity_score")

  @@index([title])
  @@index([authorId])
  @@index([boardId])
  @@index([deletedAt])
  @@index([viewCount(sort: Desc)])
  @@index([scrapCount(sort: Desc)])
  @@index([popularityScore(sort: Desc)])
  @@index([createdAt(sort: Desc)])
  @@index([deletedAt, viewCount(sort: Desc)])
  @@index([deletedAt, popularityScore(sort: Desc)])
  @@map("posts")
}

model Scrap {
  id Int @id @default(autoincrement())

  userId Int  @map("user_id")
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  postId Int  @map("post_id")
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now()) @map("created_at")

  @@unique([userId, postId]) // 제약조건 (중복 스크랩 방지)
  @@index([userId])
  @@index([postId])
  @@map("scraps")
}
